<main class="container mt-5">
<h1>Total do Imprestimo:</h1>

<section class="w-50 ml-auto text-left mb-5">
    <div style="color: white;" class="row">
        <span class="col">Subtotal</span>
        <span class="col">{{this.subtotal}}</span>
    </div>
    <div style="color: white;" class="row">
        <span class="col">Juros</span>
        <span class="col">{{this.juros}}</span>
    </div>
    <div style="color: white;" class="row">
        <span class="col">Total</span>
        <span class="col">{{this.total}}</span>
    </div>
</section>
<button type="button" class="btn btn-outline-light float-left">
    Confirmar
</button>
</main>
{{outlet}}